<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExtendedViewPager">
        <attr name="swipe_direction" format="enum" >
            <enum name="all" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="none" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="font" format="reference" />
    </declare-styleable>

    <declare-styleable name="LuckyWheelView">
        <attr name="lkwBackgroundColor" format="color" />
        <attr name="lkwCursor" format="reference" />
        <attr name="lkwCenterImage" format="reference" />
        <attr name="lkwTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>
    <declare-styleable name="ScannerOverlay">
        <attr name="square_width" format="integer" />
        <attr name="square_height" format="integer" />
        <attr name="line_color" format="color" />
        <attr name="line_width" format="integer" />
        <attr name="line_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="BarcodeReader">
        <attr name="auto_focus" format="boolean" />
        <attr name="use_flash" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BadgedTabLayout">
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgeSelectedTextColor" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="badgeSelectedBackgroundColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
    </declare-styleable>
</resources>