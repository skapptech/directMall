<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle -->
    <com.skdirect.stepform.VerticalStepperItemCircleView
        android:id="@+id/vertical_stepper_view_item_circle"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginTop="-8dp" />

    <LinearLayout
        android:id="@+id/vertical_stepper_view_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-8dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/vertical_stepper_view_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <!-- Summary -->
        <TextView
            android:id="@+id/vertical_stepper_view_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/vertical_stepper_view_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Content -->
        <FrameLayout
            android:id="@+id/vertical_stepper_view_item_content_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:visibility="gone" />
    </LinearLayout>
</merge>